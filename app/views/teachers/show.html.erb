<div><%= @teacher.first_name %>, <%= @teacher.email %> </div>
<div><%= @teacher.bio %></div>
<div><%= @teacher.regular_hours %></div>
<% if logged_in? && (current_teacher.id = Teacher.find(params[:id])||current_teacher.admin?) %>
	<div><%= link_to "Log out", logout_path, method: :delete %></div>
	<div><%= link_to "Settings", edit_teacher_path(current_teacher.id||=1) %></div>
  <div><%= link_to "Create an Availability", "/availability/new" %></div>
  <div class="col-md-8">
    <% if @teacher.availabilities.any? %>
      <h3>Availabilities (<%= @teacher.availabilities.count %>)</h3>
      <ol class="availabilities">
        <%= render @availabilities %>
      </ol>
    <% end %>
  </div>

<% end %>
